---
import { applyStyles } from "@/utils/apply-styles";

export interface Props {
  title: string;
  content: string;
  class?: string;
}

const { title, content, class: className } = Astro.props;
---

<div
  class={applyStyles(
    "rounded-quantus relative flex flex-col gap-[10px] overflow-hidden",
    className,
  )}
>
  <h3 class="font-tag text-quantus-yellow">
    {title}
  </h3>
  <p class="font-large-body">{content}</p>
</div>
