---
import "../../styles/global.css";
import "@fontsource/prompt/100.css";
import "@fontsource/prompt/200.css";
import "@fontsource/prompt/300.css";
import "@fontsource/prompt/400.css";
import "@fontsource/prompt/600.css";
import "@fontsource/prompt/700.css";
import "@fontsource/prompt/900.css";
import "@fontsource/inter/900.css";

import { SEO, type SEOProps } from "astro-seo";
import defaultMetadata from "@/constants/default-metadata";
import Footer from "./footer/Footer.astro";
import Navbar from "./navbar/Navbar.astro";

interface Props extends SEOProps {}

const { ...seoProps } = Astro.props;

// Merge with default metadata and props
const metadata = {
  ...defaultMetadata,
  ...seoProps,
};
---

<!doctype html>
<html lang="en-US" dir="ltr" class="flex min-h-full flex-col">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="/favicon.ico" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <meta name="generator" content={Astro.generator} />
    <SEO {...metadata} titleTemplate={undefined} />
  </head>
  <body class="flex grow flex-col pt-[220px] md:pt-[139px]">
    <Navbar />

    <main class="grow">
      <slot />
    </main>

    <Footer />
  </body>
</html>

<script>
  // Remove navbar padding if iframed
  if (window.self !== window.top) {
    document.body.classList.remove("md:pt-[139px]");
    document.body.classList.remove("pt-[220px]");
  }
</script>
